<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerbGame"
        tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml"
        >
    <CheckBox
            android:id="@+id/chk_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:button="@null"
            android:checked="true"
            android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
            android:text="-ω"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chk_type2"
            />
    <CheckBox
            android:id="@+id/chk_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:button="@null"
            android:checked="true"
            android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
            android:text="Passief: -μαι"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_level2"
            />
    <CheckBox
            android:id="@+id/chk_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:button="@null"
            android:checked="true"
            android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
            android:text="-άω, -ώ"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chk_type3"
            />
    <TextView
            android:id="@+id/text_ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/item_background"
            android:fontFamily="@font/tinos_italic"
            android:gravity="start|center_vertical"
            android:letterSpacing="0.02"
            android:paddingStart="4dp"
            android:text="@string/ask"
            android:textColor="@color/blue_text_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView
            android:id="@+id/txt_reveal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/tinos_italic"
            android:gravity="start|center_vertical"
            android:text="@string/reveal"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ask"
            />
    <TextView
            android:id="@+id/txt_conjugations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/tinos_italic"
            android:text=""
            android:textColor="@color/blue_text_color"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_reveal"
            />
    <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/sw_mode"
            app:layout_constraintStart_toStartOf="parent"
            />
    <Switch
            android:id="@+id/sw_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginBottom="4dp"
            android:text="Vervoegen "
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintStart_toStartOf="parent"

            />
    <TextView
            android:id="@+id/lbl_herken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:labelFor="@id/sw_mode"
            android:text="Herkennen"
            android:textColor="@color/blue_text_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintStart_toEndOf="@+id/sw_mode"
            />
    <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/lbl_persoonsvorm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    <TextView
            android:id="@+id/lbl_tijdsvorm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/label_bgcolor"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Tijdsvorm:"
            android:textColor="@color/normal_text_color"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/divider_vert_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            />
    <TextView
            android:id="@+id/lbl_persoonsvorm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/label_bgcolor"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Persoonsvorm:"
            android:textColor="@color/normal_text_color"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/chk_1"
            app:layout_constraintEnd_toStartOf="@+id/divider_vert_2"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_1"
            />
    <TextView
            android:id="@+id/lbl_level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/label_bgcolor"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Type:"
            android:textColor="@color/normal_text_color"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_2"
            app:layout_constraintTop_toBottomOf="@+id/sw_level_ballast"
            />
    <TextView
            android:id="@+id/lbl_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/label_bgcolor"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="@string/level"
            android:textColor="@color/normal_text_color"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_2"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            />
    <CheckBox
            android:id="@+id/chk_enestotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="Ενεστώτας"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_tijdsvorm"
            />
    <CheckBox
            android:id="@+id/chk_mellontas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:text="Μέλλοντας"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chk_enestotas"
            />
    <CheckBox
            android:id="@+id/chk_aoristos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:text="Αόριστος"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chk_mellontas"
            />
    <CheckBox
            android:id="@+id/chk_paratatikos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:text="Παρατατικός"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chk_aoristos"
            />
    <CheckBox
            android:id="@+id/chk_prostaktiki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Προστακτική"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chk_paratatikos"
            />
    <View
            android:id="@+id/divider_vert_1"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintStart_toEndOf="@+id/chk_paratatikos"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            />
    <CheckBox
            android:id="@+id/chk_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:onClick="onPersonClick"
            android:tag="0"
            android:text="εγώ"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/chk_2"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_1"
            />
    <CheckBox
            android:id="@+id/chk_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:onClick="onPersonClick"
            android:tag="1"
            android:text="εσύ"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/chk_3"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_1"
            />
    <CheckBox
            android:id="@+id/chk_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:onClick="onPersonClick"
            android:tag="2"
            android:text="αυτός, -ή, -ό"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/chk_4"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_1"
            />
    <CheckBox
            android:id="@+id/chk_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:onClick="onPersonClick"
            android:tag="3"
            android:text="εμείς"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/chk_5"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_1"
            />
    <CheckBox
            android:id="@+id/chk_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="true"
            android:onClick="onPersonClick"
            android:tag="4"
            android:text="εσείς"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/chk_6"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_1"
            />
    <CheckBox
            android:id="@+id/chk_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            android:checked="true"
            android:onClick="onPersonClick"
            android:tag="5"
            android:text="αυτοί, -ές, -ά"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintStart_toEndOf="@+id/divider_vert_1"
            />
    <View
            android:id="@+id/divider_vert_2"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintStart_toEndOf="@+id/chk_6"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            />

    <Switch
            android:id="@+id/sw_level_basis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:checked="true"
            android:text="@string/basis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_level"
            />
    <Switch
            android:id="@+id/sw_level_gevorderd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:checked="false"
            android:elevation="2dp"
            android:text="@string/advanced"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sw_level_basis"
            />
    <Switch
            android:id="@+id/sw_level_ballast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:checked="false"
            android:text="@string/nice_to_know"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sw_level_gevorderd"
            />
    <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:format="%s"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/divider5"
            app:layout_constraintEnd_toStartOf="@+id/lbl_total"
            app:layout_constraintStart_toEndOf="@+id/lbl_count"
            />
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/btn_fout"
            app:layout_constraintStart_toStartOf="parent"
            />
    <Button
            android:id="@+id/btn_show_ladder"
            android:layout_width="80dp"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_cap_ladder"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_verbal"
            />
    <Button
            android:id="@+id/btn_verbal"
            android:layout_width="60dp"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginBottom="8dp"
            android:text="@string/speak"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    <Button
            android:id="@+id/btn_previous"
            android:layout_width="80dp"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_cap_prev"
            android:textAllCaps="false"
            android:textColor="@color/normal_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_show_ladder"
            />
    <Button
            android:id="@+id/btn_fout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_cap_restart"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_go"
            />
    <Button
            android:id="@+id/btn_go"
            android:layout_width="100dp"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_cap_check_next"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <TextView
            android:id="@+id/lbl_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/divider5"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="totaal"
            />
    <TextView
            android:id="@+id/lbl_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/divider5"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="aantal"
            />

</androidx.constraintlayout.widget.ConstraintLayout>