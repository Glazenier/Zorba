<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="ContentDescription, Autofill"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="2"
            android:text="@string/activity_title_main"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <ImageView
            android:id="@+id/img_flag_greek"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/flag_greek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/flaggrsmall"
            />
    <ImageView
            android:id="@+id/ibtn_flag_nl"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/flag_dutch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/flagnlsmall"
            />
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_flag_greek"
            />
    <ImageButton
            android:id="@+id/btn_OpenDeck"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:background="#E0F7FA"
            android:contentDescription="@string/open_flashcards"
            android:elevation="3dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/flash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    <ImageButton
            android:id="@+id/btn_hangman"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="#E3F2FD"
            android:contentDescription="@string/play_hangman"
            android:elevation="3dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/galgje"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/btn_OpenDeck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:listitem="@layout/item_layout"
            />
    <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:labelFor="@id/text_search"
            android:text="@string/caption_search"
            app:layout_constraintBottom_toTopOf="@+id/text_search"
            app:layout_constraintStart_toEndOf="@+id/btn_OpenDeck"
            />
    <EditText
            android:id="@+id/text_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_clear"
            app:layout_constraintStart_toEndOf="@+id/btn_OpenDeck"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="text"
            android:singleLine="true"
            />
    <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="28dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="@+id/text_search"
            app:layout_constraintEnd_toStartOf="@+id/btn_hangman"
            android:layout_marginEnd="4dp"
            android:src="@android:drawable/btn_dialog"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
