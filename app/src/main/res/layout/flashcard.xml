<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C5E1A5"
        tools:context=".FlashCard"
        tools:ignore="ContentDescription, HardcodedText"
        >
    <ImageButton
            android:id="@+id/ibtn_flag_greek"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/flag_greek"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/flaggrsmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_nederlands"
            />
    <Button
            android:id="@+id/btn_OTT"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_bg_border"
            android:gravity="center"
            android:text="OTT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <Button
            android:id="@+id/btn_OTTT"
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_bg_border"
            android:gravity="center"
            android:text="OTTT"
            app:layout_constraintStart_toEndOf="@+id/btn_OTT"
            app:layout_constraintTop_toTopOf="parent"
            />
    <Button
            android:id="@+id/btn_VVT"
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_bg_border"
            android:gravity="center"
            android:text="VVT"
            app:layout_constraintStart_toEndOf="@+id/btn_OTTT"
            app:layout_constraintTop_toTopOf="parent"
            />
    <Button
            android:id="@+id/btn_OVT"
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_bg_border"
            android:gravity="center"
            android:text="OVT"
            app:layout_constraintStart_toEndOf="@+id/btn_VVT"
            app:layout_constraintTop_toTopOf="parent"
            />
    <Button
            android:id="@+id/btn_GW"
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_bg_border"
            android:gravity="center"
            android:text="GW"
            app:layout_constraintStart_toEndOf="@+id/btn_OVT"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView
            android:id="@+id/shadow_grieks"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_margin="2dp"
            android:background="@drawable/shadow"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="@string/question_mark"
            android:textAlignment="gravity"
            android:textColor="#BBDEFB"
            android:textSize="64sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ibtn_flag_greek"
            />
    <TextView
            android:id="@+id/text_grieks"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_margin="2dp"
            android:background="@drawable/backgroundborder"
            android:clickable="true"
            android:fontFamily="@font/tinos_italic"
            android:letterSpacing="0.02"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="@color/kobaltblauw"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="normal|italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ibtn_flag_greek"
            />

    <ImageButton
            android:id="@+id/ibtn_flag_nl"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/flag_dutch"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/flagnlsmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView
            android:id="@+id/text_nederlands"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_margin="2dp"
            android:background="@drawable/backgroundborder"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_flag_nl"
            />
    <TextView
            android:id="@+id/lbl-wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/emoji_wrong"
            android:textColor="?android:attr/colorAccent"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/text_grieks"
            app:layout_constraintEnd_toEndOf="@id/text_grieks"
            />
    <TextView
            android:id="@+id/lbl_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:rotation="180"
            android:text="@string/emoji_back"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/text_nederlands"
            app:layout_constraintEnd_toEndOf="@id/text_nederlands"
            />
    <ImageView
            android:id="@+id/img_paperclip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/paperclip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_grieks"
            app:srcCompat="@drawable/paperclip"
            />
    <TextView
            android:id="@+id/shadow_note"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_margin="2dp"
            android:background="@drawable/shadow"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            app:layout_constraintTop_toBottomOf="@+id/img_paperclip"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="384dp"
            />
    <TextView
            android:id="@+id/text_note"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_margin="2dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/backgroundborder"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_paperclip"
            />
    <TextView
            android:id="@+id/lbl_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/emoji_correct"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/shadow_note"
            app:layout_constraintEnd_toEndOf="@id/shadow_note"
            />
    <TextView
            android:id="@+id/text_saldo"
            android:layout_width="87dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:gravity="end|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_GW"
            app:layout_constraintTop_toTopOf="@+id/ibtn_flag_greek"
            />
    <ProgressBar
            android:id="@+id/block_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:alpha="1"
            android:max="100"
            android:progress="30"
            android:progressTint="@color/κυανός"
            app:layout_constraintBottom_toTopOf="@id/ibtn_flag_nl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView
            android:id="@+id/text_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/κυανός"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shadow_note"
            />
    <ImageButton
            android:id="@+id/btn_reveal_answer"
            android:layout_width="@dimen/nav_btn_width"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flaggrsmall"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    <ImageButton
            android:id="@+id/btn_reveal_note"
            android:layout_width="@dimen/nav_btn_width"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_reveal_answer"
            app:srcCompat="@drawable/paperclip"

            />
    <Button
            android:id="@+id/btn_speak"
            android:layout_width="@dimen/nav_btn_width"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginBottom="8dp"
            android:text="@string/speak"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_prev_block"
            app:layout_constraintStart_toEndOf="@+id/btn_reveal_note"
            />
    <Button
            android:id="@+id/btn_prev_block"
            android:layout_width="@dimen/nav_btn_width"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_caption_prev_block"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_next_block"
            />
    <Button
            android:id="@+id/btn_next_block"
            android:layout_width="@dimen/nav_btn_width"
            android:layout_height="@dimen/nav_btn_height"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_caption_next_block"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <TextView
            android:id="@+id/lbl_jumper"
            android:layout_width="33dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorAccent"
            android:gravity="bottom|center"
            android:text="↷"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
